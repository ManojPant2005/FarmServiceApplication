@page "/addnewexpense"

@using FarmServiceApplication.Data
@using FarmServiceApplication.Services
@inject ExpenseService ExpenseService
@inject NavigationManager NavigationManager

<h3>Add New Expenses Details</h3>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="for-group">
                <label for="ExpensesId" class="control-label">ExpensesId</label>
                <input form="ExpensesId" class="form-control" @bind="@obj.ExpensesId" />
            </div>
            <div class="for-group">
                <label for="FarmId" class="control-label">FarmId</label>
                <input form="FarmId" class="form-control" @bind="@obj.FarmId" />
            </div>
            <div class="for-group">
                <label for="ExpensesType" class="control-label">ExpensesType</label>
                <input form="ExpensesType" class="form-control" @bind="@obj.ExpensesType" />
            </div>
            <div class="for-group">
                <label for="v" class="control-label">ExpensesAmount</label>
                <input form="ExpensesAmount" class="form-control" @bind="@obj.ExpensesAmount" />
            </div>
            <div class="for-group">
                <label for="ExpensesDate" class="control-label">ExpensesDate</label>
                <input form="ExpensesDate" class="form-control" @bind="@obj.ExpensesDate" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateNewFarm" value="Save FarmDetails" />
                <input type="button" class="btn btn-danger" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    Expense obj = new Expense();

    protected async void CreateNewFarm()
    {
        await ExpenseService.AddNewExpenseDetails(obj);
        NavigationManager.NavigateTo("expenseDetails");
    }
    protected async void Cancel()
    {
        NavigationManager.NavigateTo("expenseDetails");
    }

}
